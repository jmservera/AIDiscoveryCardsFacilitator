{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Discovery Cards Agent Unified Schema",
    "type": "object",
    "properties": {
        "agents": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "persona": {
                        "type": "string"
                    },
                    "document": {
                        "type": "string"
                    },
                    "documents": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "persona"
                ],
                "oneOf": [
                    { "required": ["document"] },
                    { "required": ["documents"] }
                ],
                "additionalProperties": false
            }
        },
        "sections": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "oneOf": [
                        {
                            "type": "object",
                            "required": [
                                "type",
                                "agent",
                                "title",
                                "icon",
                                "url_path",
                                "header",
                                "subtitle"
                            ],
                            "properties": {
                                "type": {
                                    "const": "agent"
                                },
                                "agent": {
                                    "type": "string"
                                },
                                "title": {
                                    "type": "string"
                                },
                                "icon": {
                                    "type": "string"
                                },
                                "url_path": {
                                    "type": "string"
                                },
                                "header": {
                                    "type": "string"
                                },
                                "subtitle": {
                                    "type": "string"
                                },
                                "admin_only": {
                                    "type": "boolean"
                                }
                            },
                            "additionalProperties": false
                        },
                        {
                            "type": "object",
                            "required": [
                                "type",
                                "personas",
                                "title",
                                "icon",
                                "url_path",
                                "header",
                                "subtitle"
                            ],
                            "properties": {
                                "type": {
                                    "const": "multiagent"
                                },
                                "personas": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "minItems": 1
                                },
                                "documents": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "title": {
                                    "type": "string"
                                },
                                "icon": {
                                    "type": "string"
                                },
                                "url_path": {
                                    "type": "string"
                                },
                                "header": {
                                    "type": "string"
                                },
                                "subtitle": {
                                    "type": "string"
                                },
                                "admin_only": {
                                    "type": "boolean"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "agents",
        "sections"
    ],
    "additionalProperties": false
}