{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schemas/pages.v0.2.schema.json",
    "title": "Discovery Cards Agent Unified Schema",
    "version": "0.2.0",
    "type": "object",
    "$defs": {
        "agentNames": {
            "$dynamicAnchor": "agentNames",
            "enum": []
        }
    },
    "properties": {
        "agents": {
            "type": "object",
            "$dynamicAnchor": "agentNames",
            "propertyNames": true,
            "additionalProperties": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "type": {
                                "const": "single"
                            },
                            "persona": {
                                "type": "string"
                            },
                            "document": {
                                "type": "string"
                            },
                            "documents": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "temperature": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 2
                            },
                            "model": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "persona"
                        ],
                        "oneOf": [
                            {
                                "required": [
                                    "document"
                                ]
                            },
                            {
                                "required": [
                                    "documents"
                                ]
                            }
                        ],
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "properties": {
                            "type": {
                                "const": "tree"
                            },
                            "condition": {
                                "type": "string",
                                "description": "Prompt that will decide the routing to one of the agents. The prompt must produce one of the strings in the condition property of every agent."
                            },
                            "model": {
                                "type": "string",
                                "description": "Optional model override for this agent."
                            },
                            "temperature": {
                                "type": "number",
                                "minimum": 0,
                                "maximum": 2,
                                "description": "Optional temperature override for this agent."
                            },
                            "agents": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "condition": {
                                            "type": "string",
                                            "description": "Condition for this agent, must match one of the conditions generated by the router."
                                        },
                                        "agent": {
                                            "type": "string",
                                            "$dynamicRef": "#agentNames"
                                        }
                                    },
                                    "required": [
                                        "condition",
                                        "agent"
                                    ]
                                }
                            }
                        },
                        "required": [
                            "condition",
                            "agents"
                        ],
                        "additionalProperties": false
                    }
                ]
            }
        },
        "sections": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "type",
                        "agent",
                        "title",
                        "icon",
                        "url_path",
                        "header",
                        "subtitle"
                    ],
                    "properties": {
                        "type": {
                            "const": "agent"
                        },
                        "agent": {
                            "type": "string",
                            "$dynamicRef": "#agentNames"
                        },
                        "title": {
                            "type": "string"
                        },
                        "icon": {
                            "type": "string"
                        },
                        "url_path": {
                            "type": "string"
                        },
                        "header": {
                            "type": "string"
                        },
                        "subtitle": {
                            "type": "string"
                        },
                        "admin_only": {
                            "type": "boolean"
                        }
                    },
                    "additionalProperties": false
                }
            }
        }
    },
    "required": [
        "agents",
        "sections"
    ],
    "additionalProperties": false
}